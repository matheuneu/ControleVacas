<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ProdutoresLista">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:onClick="voltar"
            android:text="VOLTAR"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="cadastrar"
            android:text="NOVO PRODUTOR"
            android:textSize="16sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editText_produtores_procurar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableEnd="@android:drawable/ic_search_category_default"
        android:ems="10"
        android:hint="PROCURAR POR NOME"
        android:inputType="textPersonName" />

    <ListView
        android:id="@+id/listview_produtores_lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>